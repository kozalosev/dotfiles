alias diff='diff -s'

alias ll='ls -Alh'
alias la='ls -A'
alias lr='ls -AlhR'

alias sudo='sudo '      # make aliases available for sudo
alias svim='sudo vim'

# usage: ascii-video <video-file>
alias ascii-video='CACA_DRIVER=ncurses mplayer -vo caca -quiet'

alias :q='exit'
alias psg='ps -ef | grep'
alias lssocks='lsof -i tcp'
alias lsif='ip -s link'
alias lswith='grep -rnw . -e'
alias timestamp='date +%s'
